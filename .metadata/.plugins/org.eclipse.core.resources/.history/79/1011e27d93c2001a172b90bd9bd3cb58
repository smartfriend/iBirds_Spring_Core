package com.ibirds;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

public class DBConfig {

	private String driver = "org.postgresql.Driver";
	private String url = "jdbc:postgresql://localhost:2020/school";
	private String user = "postgres";
	private String password = "1234";
	
	public void showDB(String query) throws SQLException {
		try {
			Class.forName(driver);
			Connection con = DriverManager.getConnection(url, user,password);
			Statement stmt = con.createStatement();
			ResultSet result = stmt.executeQuery(query);
			
			while(result.next()) {
				int id = result.getInt(1);
				System.out.println(result.getString("Student Id : " + id));
				System.out.println(result.getString("Student Name : " + 2));
				System.out.println(result.getString("Student Gender : " + 3));
				System.out.println(result.getString("Student Marks : " + 4));
			}
		}catch(Exception e) {
			System.out.println("Error : " + e);
		}
		
	}
}
